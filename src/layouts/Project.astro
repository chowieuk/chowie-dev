---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";
import BaseHead from "../components/BaseHead.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";
import Header from "../components/Header.astro";
import GenHero from "../components/GenHero.astro";
import { randomAlgorithm } from "../consts";
type Props = CollectionEntry<"projects">["data"];

const {
    title,
    description,
    pubDate,
    updatedDate,
    heroImage,
    heroIframe,
    heroCanvas,
} = Astro.props;

const formatCssValue = (value: string | number) =>
    typeof value === "number" ? `${value}px` : value;
---

<html lang="en">
    <head>
        <BaseHead title={title} description={description} />
        <style>
            main {
                max-width: 100%;
                margin: 0;
            }
            .hero-container {
                width: 100%;
                /*max-width: 78%;*/
                margin: 0 auto;
            }
            .hero-container img {
                display: block;
                margin: 0 auto;
                border-radius: 12px;
                box-shadow: var(--box-shadow);
            }
            .hero-container :global(.gen-hero-canvas) {
                display: block;
                margin: 0 auto;
                box-shadow: var(--box-shadow);
            }
            .prose {
                width: 720px;
                max-width: calc(100% - 2em);
                margin: auto;
                padding: 1em;
                color: rgb(var(--gray-dark));
            }
            .title {
                margin-bottom: 1em;
                padding: 1em 0;
                text-align: center;
                line-height: 1;
            }
            .title h1 {
                margin: 0 0 0.5em 0;
            }
            .date {
                margin-bottom: 0.5em;
                color: rgb(var(--gray));
            }
            .last-updated-on {
                font-style: italic;
            }
        </style>
    </head>

    <body>
        <Header />
        <main>
            <article>
                <div class="hero-container">
                    {
                        /* iframe > Image > GenHero (failover) */
                        heroIframe ? (
                            <iframe
                                src={heroIframe.src}
                                title={heroIframe.title}
                                id={heroIframe.id}
                                style={{
                                    width: formatCssValue(heroIframe.width),
                                    height: formatCssValue(heroIframe.height),
                                    border: "none",
                                }}
                            />
                        ) : heroImage ? (
                            <Image
                                width={960}
                                height={480}
                                src={heroImage}
                                alt=""
                            />
                        ) : (
                            <GenHero
                                algorithm={
                                    heroCanvas?.algorithm ?? randomAlgorithm()
                                }
                                width={960}
                                height={480}
                                seed={heroCanvas?.seed}
                            />
                        )
                    }
                </div>
                <div class="prose">
                    <div class="title">
                        <div class="date">
                            <FormattedDate date={pubDate} />
                            {
                                updatedDate && (
                                    <div class="last-updated-on">
                                        Last updated on{" "}
                                        <FormattedDate date={updatedDate} />
                                    </div>
                                )
                            }
                        </div>
                        <h1>{title}</h1>
                        <hr />
                    </div>
                    <slot />
                </div>
            </article>
        </main>
        <Footer />
    </body>
</html>
